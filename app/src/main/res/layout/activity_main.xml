<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!--    <androidx.constraintlayout.widget.Guideline-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/guideline"-->
<!--            android:orientation="horizontal" app:layout_constraintGuide_percent="0.019900497"/>-->
    <EditText
            android:layout_width="276dp"
            android:layout_height="61dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etBirth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp"
            android:hint="Enter birth year"
            android:textAllCaps="false" android:textAlignment="center"/>
    <TextView
            android:text="Your age is :"
            android:layout_width="169dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvAge"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/etBirth"
            android:layout_marginTop="180dp"
            app:layout_constraintHorizontal_bias="0.365" android:textStyle="bold"/>
    <Button
            android:text="Get Age"
            android:layout_width="107dp"
            android:layout_height="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnGetAge"
            android:onClick="calculateAge"
            android:enabled="false"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvAge"
            app:layout_constraintStart_toEndOf="@+id/tvAge"
            android:background="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.339"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"
            android:id="@+id/switch1"
            android:layout_marginStart="44dp" android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>